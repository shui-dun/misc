{
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++2a",
                "-Wall",
                "-Wextra",
                "-Weffc++",
                "-Og",
                "-ggdb",
                "${fileBasename}",
                "-larmadillo",
                "-o",
                "${fileBasenameNoExtension}.out",
                ";",
                "./${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}